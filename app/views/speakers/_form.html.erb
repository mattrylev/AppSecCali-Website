<%= form_for(@speaker, :html => {:class=>"form-horizontal"}) do |f| %>
  <% if @speaker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@speaker.errors.count, "error") %> prohibited this speaker from being saved:</h2>

      <ul>
      <% @speaker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Your name', :class => "control-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :abstract, :class => "control-label"  %>
    <%= f.text_area :abstract %>
  </div>
  <div class="field">
    <%= f.label :training, "Is this a training submission?", :class => "control-label"  %>
    <%= f.check_box :training %>
  </div>
  <div class="field" style="clear:both">
    <%= f.label :bio, :class => "control-label"  %>
    <%= f.text_area :bio %>
  </div>
  <div class="field">
    <%= f.label :website, :class => "control-label"  %>
    <%= f.text_area :website %>
  </div>
  <div class="field">
    <%= f.label :email, :class => "control-label"  %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :image_url, 'Profile image url', :class => "control-label"  %>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :twitter_handle, :class => "control-label"  %>
    <%= f.text_field :twitter_handle %>
  </div>
  <div class="field">
    <%= f.label :title, :class => "control-label"  %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :company, :class => "control-label"  %>
    <%= f.text_field :company %>
  </div>
  <div class="actions jumbotron">
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
  </div>
<% end %>
