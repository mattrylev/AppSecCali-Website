<p><%= image_tag((@speaker.image_url.blank? ? 'egg.png' : @speaker.image_url), :width => 150) %></p>
<p>
  <h1><%= @speaker.name %></h1>
</p>
<% unless @speaker.twitter_handle.blank? %>
  <% @speaker.twitter_handle.split(',').each do |s| %>
    <p>
      <a href="https://twitter.com/<%=s.gsub(/\s+/, "")%>" class="twitter-follow-button" data-show-count="false" data-size="large" data-dnt="true">
        Follow <%= s.gsub(/\s+/, "") %>
      </a>
    </p>
  <% end %>
<% end %>

<% if @speaker.website.present? %>
  </p>
    <strong>Website:</strong>
    <%= link_to @speaker.website, @speaker.website %>
  </p>
<% end %>

<% if @speaker.company.present? %>
  </p>
    <strong>Company: <%= @speaker.company %> </strong>
  </p>
<% end %>

<% if @speaker.title.present? %>
  </p>
    <strong>Title: <%= @speaker.title %> </strong>
  </p>
<% end %>

<% unless @speaker.abstract.blank? %>
<p>
  <strong>Abstract:</strong>
  <pre style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
    <%= @speaker.abstract %>
  </pre>
</p>
<% end %>

<% unless @speaker.bio.blank? %>
<p>
  <strong>Bio:</strong>
  <pre style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
    <%= @speaker.bio.gsub('â€¢', '*').gsub('o', '  - ') %>
  </pre>
</p>
<% end %>


