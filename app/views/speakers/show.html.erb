<p id="notice"><%= notice %></p>
<p><%= image_tag @speaker.image_url %></p>
<p>
  <h1><%= @speaker.name %></h1>
</p>
<p>
  <strong>Twitter:</strong>
  <%= link_to (@speaker.twitter_handle.starts_with?("@") ? "" : "@") + @speaker.twitter_handle, "https://twitter.com/" + @speaker.twitter_handle %>
</p>

<p>
<% if @speaker.website.present? %>
  <strong>Website:</strong>
  <%= link_to @speaker.website, @speaker.website %>
<% end %>
</p>

<p>
  <strong>Title:</strong>
  <%= @speaker.title %>
</p>

<p>
  <strong>Company:</strong>
  <%= @speaker.company %>
</p>

<p>
  <strong>Bio:</strong>
  <blockquote>
    <pre>
      <%= @speaker.bio %>
    </pre>
  </blockquote>
</p>

<%= link_to 'Edit', edit_speaker_path(@speaker) %>
