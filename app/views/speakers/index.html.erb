<h1>Listing speakers</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Image url</th>
      <th>Twitter handle</th>
      <th>Title</th>
      <th>Company</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.name %></td>
        <td><%= mail_to speaker.email %></td>
        <td><%= image_tag speaker.image_url %></td>
        <td><%= link_to "https://twitter.com/" + speaker.twitter_handle %></td>
        <td><%= speaker.title %></td>
        <td><%= speaker.company %></td>
        <td><%= link_to 'Show', speaker %></td>
        <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
        <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

