        <h1>Confirmed Speakers</h1>
          <div class="row-fluid">
<% @speakers.where(:confirmed => true).shuffle.each_with_index do |speaker, index| -%>
            <div class="span4">
              <p><%= link_to(image_tag(speaker.image_url, :style => 'height: 150px'), (speaker.slug == 'jim-manico' ? "speakers/#{speaker.id}" : speaker)) %></p>
              <h3><%= link_to(speaker.name, (speaker.slug == 'jim-manico' ? "speakers/#{speaker.id}" : speaker)) %></h3>
              <h4><%= speaker.presentation_title %></h4>
              <p><%= truncate(speaker.bio.blank? ? speaker.abstract : speaker.bio, length: 300, omission: '') { link_to "...(continued)", (speaker.slug == 'jim-manico' ? "speakers/#{speaker.id}" : speaker) } %></p>
            </div><!--/span-->
  <% if (index + 1) % 3 == 0 -%>
          </div><!--/row-->
          <div class="row-fluid">
  <% end -%>
<% end -%>
        </div>


