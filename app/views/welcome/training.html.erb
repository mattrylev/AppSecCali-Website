<h1>Training</h1>
<h4>The following trainers will be providing training. Location TBD.</h4>
      <div class="row-fluid">
        <div class="span9">
          <div class="row-fluid">
<% @speakers.where(:confirmed => true).where(:training => true).shuffle.each_with_index do |speaker, index| -%>
            <div class="span6">
              <p><%= image_tag speaker.image_url%></p>
              <h3><%= link_to speaker.name, speaker %></h3>
              <p><%= speaker.title %></p>
              <p><%= speaker.company %></p>
              <p><strong>Training Material: <%= speaker.abstract %></strong></p>
            </div><!--/span-->
  <% if (index + 1) % 2 == 0 -%>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->
      <div class="row-fluid">
        <div class="span9">
          <div class="row-fluid">
  <% end -%>
<% end -%>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->